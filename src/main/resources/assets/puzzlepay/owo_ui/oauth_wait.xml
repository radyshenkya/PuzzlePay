<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text translate="true">gui.puzzlepay.text.oauth2.wait_title</text>
                            <shadow>true</shadow>
                        </label>

                        <button id="cancel-button">
                            <margins>
                                <top>
                                    5
                                </top>
                            </margins>
                            <sizing>
                                <horizontal method="fill">
                                    100
                                </horizontal>
                            </sizing>
                            <text translate="true">gui.puzzlepay.button.cancel</text>
                        </button>
                    </children>

                    <surface>
                        <panel dark="true" />
                    </surface>

                    <sizing>
                        <horizontal method="fill">60</horizontal>
                    </sizing>

                    <padding>
                        <all>15</all>
                    </padding>


                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent />
            </surface>
        </flow-layout>
    </components>
</owo-ui>